<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity"
    android:background="@color/white">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Books"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"


        />
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/slogan_category">

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="107dp"
            android:layout_height="80dp"
            android:src="@drawable/ten" />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:src="@drawable/pu" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="91dp"
            android:layout_height="80dp"
            android:src="@drawable/bsc" />
        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="108dp"
            android:layout_height="80dp"
            android:src="@drawable/bca"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="108dp"
            android:layout_height="80dp"
            android:src="@drawable/cs"


            />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:src="@drawable/ee" />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="91dp"
            android:layout_height="80dp"
            android:src="@drawable/is"
            />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="108dp"
            android:layout_height="80dp"

            android:src="@drawable/mca" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear2_category_layout">
        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="108dp"
            android:layout_height="80dp"
            android:src="@drawable/mba"/>
        <ImageView
            android:id="@+id/laptops_pc"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:src="@drawable/civil"/>
        <ImageView
            android:id="@+id/watches"
            android:layout_width="91dp"
            android:layout_height="80dp"
            android:src="@drawable/llb"/>
        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="108dp"
            android:layout_height="80dp"
            android:src="@drawable/mbbs"/>
    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_500"
        android:text="Maintain Books"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@+id/check_orders_btn"
        android:textAllCaps="false"></Button>


<Button
    android:id="@+id/check_orders_btn"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_above="@+id/admin_logout_btn"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/purple_500"
    android:text="Check new orders"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:textStyle="bold"
    android:textAllCaps="false"></Button>
    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/purple_500"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"></Button>






</RelativeLayout>